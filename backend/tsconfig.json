{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "strict": true,
        "target": "es6",
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "paths": {
            "@common/*": ["./src/common/*"],
            "@config/*": ["./src/config/*"],
            "@modules/*": ["./src/modules/*"]
        }
    },
    "exclude": ["node_modules"]
}
